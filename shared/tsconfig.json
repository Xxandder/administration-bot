{
    "extends": "../tsconfig.json",
    "include": ["src"],
    "exclude": ["node_modules"],
    "compilerOptions": {
      "target": "ESNext",
      "moduleResolution": "NodeNext",
      "module": "NodeNext",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "~/*": ["./src/*"]
      },
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "skipLibCheck": true
    }
  }